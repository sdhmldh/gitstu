/* pages/index/index.wxss */

.menu {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 25rpx;
}

.item {
  display: flex;
  flex-direction: column;
  justify-content: center;

}

image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
}

.goodsList .goodsTitle {
  font-size: 56rpx;
  font-weight: 222;
  font-style: initial;
}

.goodsList .goodsStatus {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 30rpx;
  color: #8c8c8c;
}

.goodsList .goodsImg {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}

.goodsList .goodsImg image {
  width: 100%;
  height: 100%;

}

goodsList .goodsOther {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  top: 5rpx;
}

goodsList .goodsOther image {
  padding: 15rpx;
}